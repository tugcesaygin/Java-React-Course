		product1.detail = "32 GB RAM";
		

		Product product2 = new Product();
		product2.id = 2;
		product2.name = "Lenovo V1";
		product2.unitPrice = 10000;
		product2.detail = "8 GB RAM";
		
		

		Product product3 = new Product();
		product3.id = 3;
